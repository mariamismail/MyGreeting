<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.dell.mygreeting.MainActivityFragment"
    >

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:text="Choose it RANDOMLY !"/>

                     <android.support.v7.widget.RecyclerView
                         android:layout_width="match_parent"
                         android:layout_height="300dp"
                         android:layout_below="@id/text1"
                         android:id="@+id/daysList"
                         />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/daysList"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:text="OR Select your Celebration "/>

       <Spinner
           android:id="@+id/spinner1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
          android:layout_below="@id/text2"


           android:background="@android:drawable/dialog_holo_light_frame" />

       <ImageView
           android:layout_width="75dp"
           android:layout_height="75dp"
           android:src="@drawable/down"
           android:layout_below="@id/daysList"
          android:layout_alignRight="@id/spinner1"
           android:layout_alignEnd="@id/spinner1"

           />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorAccent"
        android:elevation="7dp" />


</RelativeLayout>